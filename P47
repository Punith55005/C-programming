#include <stdio.h>

int main() {
    float x1, y1, x2, y2;
    float slope;

    // Input the coordinates
    printf("Enter the coordinates of point 1 (x y): ");
    scanf("%f %f", &x1, &y1);

    printf("Enter the coordinates of point 2 (x y): ");
    scanf("%f %f", &x2, &y2);

    // Calculate the slope
    slope = (y2 - y1) / (x2 - x1);

    // Display the slope
    printf("Slope of the line joining the two points: %.2f\n", slope);

    return 0;
}
