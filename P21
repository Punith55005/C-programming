#include <stdio.h>
#include <stdbool.h>

int main() {
    bool var1 = true;
    bool var2 = false;
    bool var3 = 0;      // 0 is treated as false
    bool var4 = 42;     // Non-zero values are treated as true

    printf("var1 = %d\n", var1);
    printf("var2 = %d\n", var2);
    printf("var3 = %d\n", var3);
    printf("var4 = %d\n", var4);

    return 0;
}
